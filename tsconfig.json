{
  "include": ["./src/*"],
  "compilerOptions": {
    "strict": false,
    "esModuleInterop": true,
    "lib": ["dom", "ES7"],
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true
  }
}
